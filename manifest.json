{
  "manifest_version": 3,
  "name": "WatchMate ðŸŽ¥ðŸ’¬ (Local Test)",
  "version": "1.0",
  "description": "A Chrome extension that enables real-time chat functionality for YouTube videos.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "css": ["style.css"],
      "js": ["lib/ably.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/icon48.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
